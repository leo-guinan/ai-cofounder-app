{
  "name": "ai-cofounder-app",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "backend",
    "frontend",
    "telemetry"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm run dev:backend\" \"pnpm run dev:frontend\"",
    "dev:backend": "cd backend && pnpm run dev",
    "dev:frontend": "cd frontend && pnpm run dev",
    "build": "pnpm --filter backend run build && pnpm --filter frontend run build",
    "build:backend": "cd backend && pnpm run build",
    "build:frontend": "cd frontend && pnpm run build",
    "test": "pnpm --filter backend run test",
    "test:docker": "docker-compose -f docker-compose.test.yml up test-runner",
    "test:e2e": "playwright test",
    "test:all": "pnpm run test && pnpm run test:e2e",
    "generate:tests": "cd backend && pnpm run generate:tests",
    "check:secrets": "chmod +x scripts/check-secrets.sh && ./scripts/check-secrets.sh",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "type-check": "cd backend && pnpm exec tsc --noEmit && cd ../frontend && pnpm exec tsc --noEmit",
    "type-check:backend": "cd backend && pnpm exec tsc --noEmit",
    "type-check:frontend": "cd frontend && pnpm exec tsc --noEmit",
    "pre-commit": "lint-staged",
    "validate:requirements": "tsx .github/scripts/validate-requirements.ts",
    "validate:commit-msg": "tsx .github/scripts/validate-commit-msg.ts",
    "complexity:check": "eslint . --ext .ts,.tsx --max-warnings=0",
    "bundle:check": "tsx .github/scripts/check-bundle-size.ts",
    "security:check": "pnpm audit",
    "ai:review": "tsx .github/scripts/ai-review-agent.ts",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@octokit/rest": "^20.0.2",
    "@playwright/test": "^1.40.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.55.0",
    "husky": "^8.0.3",
    "lint-staged": "^16.2.4",
    "prettier": "^3.1.0",
    "tsx": "^4.7.0"
  }
}
